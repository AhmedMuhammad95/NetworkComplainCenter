@{
    ViewBag.Title = "Create";
    var complains = ViewBag.Complains as List<NetworkComplainCenter.Complain>;
    var locations = ViewBag.Locations as List<NetworkComplainCenter.Location>;
    var computers = ViewBag.Computers as List<NetworkComplainCenter.Computer>;

}
<div class="panel panel-widget forms-panel">
    <div class="forms">
        <div class=" form-grids form-grids-right">
            <div class="widget-shadow " data-example-id="basic-forms">
                <div class="form-title">
                    <h4>New Complain</h4>
                </div>
                <div class="form-body">
                    @using (Html.BeginForm("Create", "Complain", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Title</label>
                            <div class="col-sm-8">
                                <input required type="text" name="title" class="form-control" placeholder="Title">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Location</label>
                            <div class="col-sm-4">
                                <select required name="location_id" id="selector1" class="form-control at-required">
                                    <option>--Select--</option>
                                    @foreach (var item in locations)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Computer #</label>
                                <div class="col-sm-4">
                                    <select required name="computer_id" id="selector1" class="form-control at-required">
                                        <option>Select</option>
                                        <option value="0">--Select--</option>
                                        <option value="1">PC 1</option>
                                        <option value="2">PC 2</option>
                                        <option value="3">PC 3</option>
                                    </select>    
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="txtarea1" class="col-sm-2 control-label">Description</label>
                            <div class="col-sm-8">
                                <textarea required name="detail" id="txtarea1" cols="50" rows="4" class="form-control1"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                           <label for="file1" class="col-sm-2 control-label">Evidence File</label>
                           <div class="col-sm-8">
                           <input type="file" name="evidence" class="form-control1" value=" " />
                           </div>
                        </div>
                        <div class="col-sm-offset-2">
                            <button type="submit" class="btn btn-default w3ls-button">Submit</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>