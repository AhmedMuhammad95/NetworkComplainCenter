@{
    ViewBag.Title = "Create";
    var locations = ViewBag.Locations as List<NetworkComplainCenter.Location>;
}

<div class="panel panel-widget forms-panel">
    <div class="forms">
        <div class=" form-grids form-grids-right">
            <div class="widget-shadow " data-example-id="basic-forms">
                <div class="form-title">
                    <h4>New Computer</h4>
                </div>
                <div class="form-body">
                    @using (Html.BeginForm("Create", "Complain", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Name</label>
                            <div class="col-sm-8">
                                <input type="text" name="name" class="form-control" placeholder="Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="selector1" class="col-sm-2 control-label">Location</label>
                            <div class="col-sm-4">
                                <select required name="location_id" id="selector1" class="form-control at-required">
                                    <option>--Select--</option>
                                    @foreach (var item in locations)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-offset-2">
                            <button type="submit" class="btn btn-default w3ls-button">Submit</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>