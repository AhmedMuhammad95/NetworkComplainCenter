@{
    ViewBag.Title = "Create";
    var usertypes = ViewBag.UserTypes as List<NetworkComplainCenter.UserType>;
}
<div class="panel panel-widget forms-panel">
    <div class="forms">
        <div class=" form-grids form-grids-right">
            <div class="widget-shadow " data-example-id="basic-forms">
                <div class="form-title">
                    <h4>New User</h4>
                </div>
                <div class="form-body">
                    @using (Html.BeginForm("Create", "User", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Name</label>
                            <div class="col-sm-8">
                                <input type="text" name="name" class="form-control" id="inputEmail3" placeholder="Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-8">
                                <input type="email" name="email" class="form-control" id="inputEmail3" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Password</label>
                            <div class="col-sm-8">
                                <input type="password" name="password" class="form-control" id="inputPassword3" placeholder="Password">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">User Type</label>
                            <div class="col-sm-4">
                                <select name="usertype_id" id="selector1" class="form-control at-required">
                                    <option>--Select--</option>
                                    @foreach (var item in usertypes)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-offset-2">
                            <button type="submit" class="btn btn-default w3ls-button">Submit</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>